<p> Home </p>

<% @posts.each do |post| %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.updated_at.strftime("%d of %B, %Y") %></p>
    <%=link_to("Show", post_path(post.id), method: :get, class: "btn btn-success")%>
    <%=link_to("Edit", edit_post_path(post.id), method: :get, class: "btn btn-primary")%>
    <%=link_to("Delete", post_path(post.id), method: :delete, class: "btn btn-danger")%>
  </div>
</div>
<% end %>